stroke(255, 102, 0)
curve(73, 24, 73, 61, 15, 65, 15, 65)

DrawSimpleFish(300, 400)
scale(2.0)
DrawSimpleFish(500, 400)
DrawSimpleFish(200, 500)
scale(0.8)
DrawSimpleFish(300, 700)
scale(1.5)
