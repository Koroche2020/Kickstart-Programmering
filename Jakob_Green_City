fill (34, 133, 43)
rect(0, 200, 800, 220)

# Græs
fill (34, 133, 43)
rect(0, 500, 800, 300)

# Vej
fill(73, 74, 77) # blå
rect(0, 120, 800, 100)

# Vej
fill(73, 74, 77) # blå
rect(0, 420, 800, 100)

#Træ
def DrawSimpleTree(x, y):
    fill(31, 224, 118)
    rect(x, y, 10, 20)
    ellipse(x+5, y-15, 30, 40)
    
#Træ
treeX = 80
treeY = 100
fill(31, 224, 118)
rect(treeX, treeY, 10, 20)
ellipse(treeX+5, treeY-15, 30, 40)

